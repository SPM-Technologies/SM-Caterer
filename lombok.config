# Lombok Configuration
# Configures how Lombok generates code

# Add @Generated annotation to all Lombok-generated code
# Useful for code coverage tools (they can skip generated code)
lombok.addLombokGeneratedAnnotation = true

# Add constructor properties for better Jackson/serialization support
lombok.anyConstructor.addConstructorProperties = true

# Make all fields private by default (best practice)
lombok.fieldDefaults.defaultPrivate = true

# Don't make fields final by default (allows mutation)
lombok.fieldDefaults.defaultFinal = false

# Call super methods in toString (important for inheritance)
lombok.toString.callSuper = CALL

# Use getters in toString (not direct field access)
lombok.toString.doNotUseGetters = false

# Call super in equals and hashCode (important for inheritance)
lombok.equalsAndHashCode.callSuper = CALL

# Default logger field name
lombok.log.fieldName = log

# Suppress warnings for null checks
lombok.nonNull.exceptionType = IllegalArgumentException
